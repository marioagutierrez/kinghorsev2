---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import ThreeBackground from "../components/ThreeBackground.astro";
import {
	ChevronRight,
	Phone,
	MapPin,
	Mail,
	Trophy,
	Zap,
	Shield,
} from "lucide-react";
---

<Layout title="KingHorse - Apuestas de Caballos y Oficina">
	<Navbar />

	<main class="relative bg-king-dark min-h-screen">
		<ThreeBackground />

		<!-- Hero Section -->
		<section
			id="inicio"
			class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden"
		>
			<!-- Hero Background Image -->
			<div class="absolute inset-0 z-0">
				<img
					src="/hero-race.jpg"
					alt="Carrera de caballos"
					class="w-full h-full object-cover opacity-20"
				/>
				<div
					class="absolute inset-0 bg-gradient-to-b from-king-dark/90 via-king-dark/80 to-king-dark"
				>
				</div>
			</div>

			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
				<div class="text-center">
					<div class="flex justify-center mb-8">
						<img
							src="/logo-king.png"
							alt="KingHorse Logo"
							class="h-50 w-auto drop-shadow-[0_0_15px_rgba(255,215,0,0.5)] animate-fade-in"
						/>
					</div>
					<h1
						class="text-4xl sm:text-6xl font-extrabold text-white tracking-tight mb-4"
					>
						La Mejor Experiencia en <br />
						<span
							class="text-transparent bg-clip-text bg-gradient-to-r from-king-yellow to-yellow-500"
							>Apuestas Hípicas</span
						>
					</h1>
					<p class="mt-4 text-xl text-gray-300 max-w-2xl mx-auto">
						Seguridad, confianza y las mejores jugadas en Caracas.
						Vive la emoción de ganar con KingHorse.
					</p>
					<div class="mt-8 flex justify-center gap-4">
						<a
							href="#contacto"
							class="bg-king-yellow text-black hover:bg-yellow-400 font-bold py-3 px-8 rounded-full transition-all transform hover:scale-105 shadow-[0_0_20px_rgba(255,215,0,0.3)] flex items-center"
						>
							Juega Ahora <ChevronRight
								className="ml-2 w-5 h-5"
							/>
						</a>
						<a
							href="#sobre-nosotros"
							class="bg-white/10 hover:bg-white/20 text-white font-semibold py-3 px-8 rounded-full backdrop-blur-sm transition-all border border-white/20"
						>
							Conoce Más
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Features / About Section -->
		<section
			id="sobre-nosotros"
			class="relative py-24 bg-king-gray/30 backdrop-blur-sm"
		>
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
				<div class="text-center mb-16">
					<h2 class="text-3xl font-bold text-white sm:text-4xl">
						¿Por qué elegir KingHorse?
					</h2>
					<p class="mt-4 text-gray-400">de trayectoria.</p>
				</div>

				<div
					class="flex flex-col lg:flex-row items-center gap-12 mb-16"
				>
					<div class="lg:w-1/2">
						<video
							src="/kinghorsevideo.mp4"
							class="rounded-3xl shadow-2xl border-4 border-king-yellow/20 rotate-2 hover:rotate-0 transition-all duration-500 w-full max-w-xs mx-auto object-cover aspect-[9/16] pointer-events-none"
							autoplay
							muted
							loop
							playsinline></video>
					</div>
					<div class="lg:w-1/2 grid grid-cols-1 gap-8">
						<!-- Feature 1 -->
						<div
							class="bg-white/5 p-8 rounded-2xl border border-white/10 hover:border-king-yellow/50 transition-all hover:-translate-y-1 hover:shadow-[0_10px_30px_-10px_rgba(255,215,0,0.1)]"
						>
							<div
								class="bg-king-yellow/20 w-14 h-14 rounded-full flex items-center justify-center mb-6"
							>
								<Shield className="w-8 h-8 text-king-yellow" />
							</div>
							<h3 class="text-xl font-bold text-white mb-3">
								Seguridad Garantizada
							</h3>
							<p class="text-gray-400">
								Tus apuestas están seguras con nosotros.
								Contamos con un sistema transparente y
								confiable.
							</p>
						</div>

						<!-- Feature 2 -->
						<div
							class="bg-white/5 p-8 rounded-2xl border border-white/10 hover:border-king-yellow/50 transition-all hover:-translate-y-1 hover:shadow-[0_10px_30px_-10px_rgba(255,215,0,0.1)]"
						>
							<div
								class="bg-king-yellow/20 w-14 h-14 rounded-full flex items-center justify-center mb-6"
							>
								<Zap className="w-8 h-8 text-king-yellow" />
							</div>
							<h3 class="text-xl font-bold text-white mb-3">
								Pagos Rápidos
							</h3>
							<p class="text-gray-400">
								Retira tus ganancias al instante. Priorizamos la
								velocidad en todas nuestras transacciones.
							</p>
						</div>

						<!-- Feature 3 -->
						<div
							class="bg-white/5 p-8 rounded-2xl border border-white/10 hover:border-king-yellow/50 transition-all hover:-translate-y-1 hover:shadow-[0_10px_30px_-10px_rgba(255,215,0,0.1)]"
						>
							<div
								class="bg-king-yellow/20 w-14 h-14 rounded-full flex items-center justify-center mb-6"
							>
								<Trophy className="w-8 h-8 text-king-yellow" />
							</div>
							<h3 class="text-xl font-bold text-white mb-3">
								Mejores Cuotas
							</h3>
							<p class="text-gray-400">
								Ofrecemos las cuotas más competitivas del
								mercado para maximizar tus ganancias.
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<!-- Statistics Section (Optional dynamic design element) -->
	<section class="py-20 border-y border-white/5 bg-black/40">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
				<div>
					<div class="text-4xl font-bold text-king-yellow mb-2">
						10+
					</div>
					<div class="text-gray-400 text-sm">Años de Experiencia</div>
				</div>
				<div>
					<div class="text-4xl font-bold text-king-yellow mb-2">
						24/7
					</div>
					<div class="text-gray-400 text-sm">Soporte Activo</div>
				</div>
				<div>
					<div class="text-4xl font-bold text-king-yellow mb-2">
						100%
					</div>
					<div class="text-gray-400 text-sm">Seguridad</div>
				</div>
				<div>
					<div class="text-4xl font-bold text-king-yellow mb-2">
						5k+
					</div>
					<div class="text-gray-400 text-sm">Clientes Felices</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section id="contacto" class="relative py-24">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<div class="max-w-2xl mx-auto text-center mb-16">
				<h2 class="text-3xl font-bold text-white sm:text-4xl">
					Contáctanos
				</h2>
				<p class="mt-4 text-gray-400">
					Estamos listos para atenderte. Escríbenos o visítanos.
				</p>
			</div>

			<div
				class="bg-white/5 backdrop-blur-md rounded-3xl p-8 md:p-12 border border-white/10 max-w-4xl mx-auto"
			>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
					<div class="space-y-8">
						<h3 class="text-2xl font-bold text-white">
							Información de Contacto
						</h3>

						<div class="flex items-start space-x-4">
							<div class="bg-king-yellow/10 p-3 rounded-lg">
								<MapPin className="w-6 h-6 text-king-yellow" />
							</div>
							<div>
								<h4 class="text-white font-semibold">
									Ubicación
								</h4>
								<p class="text-gray-400 mt-1">
									Caracas, Venezuela
								</p>
							</div>
						</div>

						<div class="flex items-start space-x-4">
							<div class="bg-king-yellow/10 p-3 rounded-lg">
								<Phone className="w-6 h-6 text-king-yellow" />
							</div>
							<div>
								<h4 class="text-white font-semibold">
									Teléfono / WhatsApp
								</h4>
								<p class="text-gray-400 mt-1">
									+58 412-1234567
								</p>
							</div>
						</div>

						<div class="flex items-start space-x-4">
							<div class="bg-king-yellow/10 p-3 rounded-lg">
								<Mail className="w-6 h-6 text-king-yellow" />
							</div>
							<div>
								<h4 class="text-white font-semibold">Email</h4>
								<p class="text-gray-400 mt-1">
									contacto@kinghorse.com.ve
								</p>
							</div>
						</div>
					</div>

					<form class="space-y-6">
						<div>
							<label
								for="name"
								class="block text-sm font-medium text-gray-300"
								>Nombre</label
							>
							<input
								type="text"
								id="name"
								class="mt-1 block w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-king-yellow focus:border-transparent transition-all"
								placeholder="Tu nombre"
							/>
						</div>
						<div>
							<label
								for="email"
								class="block text-sm font-medium text-gray-300"
								>Email</label
							>
							<input
								type="email"
								id="email"
								class="mt-1 block w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-king-yellow focus:border-transparent transition-all"
								placeholder="tucorreo@ejemplo.com"
							/>
						</div>
						<div>
							<label
								for="message"
								class="block text-sm font-medium text-gray-300"
								>Mensaje</label
							>
							<textarea
								id="message"
								rows="4"
								class="mt-1 block w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-king-yellow focus:border-transparent transition-all"
								placeholder="¿En qué podemos ayudarte?"
							></textarea>
						</div>
						<button
							type="submit"
							class="w-full bg-king-yellow text-black font-bold py-3 px-8 rounded-lg hover:bg-yellow-400 transition-all transform hover:scale-[1.02] shadow-lg"
						>
							Enviar Mensaje
						</button>
					</form>
				</div>
			</div>
		</div>
	</section>
</Layout>
<Footer />

<style>
	/* Custom animations if needed */
	@keyframes fade-in {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	.animate-fade-in {
		animation: fade-in 1s ease-out forwards;
	}
</style>
